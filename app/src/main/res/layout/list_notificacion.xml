<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/icono"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_report_problem_black_24dp" />

            <LinearLayout
                android:id="@+id/linearlayoutlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/icono"
                android:layout_toRightOf="@+id/icono"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/asunto"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center|left"
                    android:text="Notificacion"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/estado"
                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:text="MÃ¡s"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/fecha"
                android:layout_width="123dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/linearlayoutlist"
                android:gravity="center"
                android:text="fecha"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/notii"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="28dp"
                android:layout_toEndOf="@+id/linearlayoutlist"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:src="@drawable/badge" />


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>