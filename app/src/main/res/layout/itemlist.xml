<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/icono"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/ic_report_problem_black_24dp" />

            <LinearLayout
                android:id="@+id/linearlayoutlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/icono"
                android:layout_toRightOf="@+id/icono"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tipo"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center|left"
                    android:text="tipo"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/comentario"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="comentario"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/estado"
                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:text="MÃ¡s"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/refactor"
                android:layout_width="144dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/linearlayoutlist"
                android:gravity="center"
                android:text="estado"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="125dp"
                android:layout_height="37dp"
                android:layout_below="@+id/refactor"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="18dp"
                android:layout_toEndOf="@+id/linearlayoutlist"
                android:gravity="center"
                android:text="fecha"
                android:textSize="14sp" />


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>